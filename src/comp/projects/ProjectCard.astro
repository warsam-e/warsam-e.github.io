---
import type { Project, ProjectLinkType } from "$lib/projects/types";
import ProductCardStackItem from "./ProductCardStackItem.astro";

interface Props {
  project: Project;
}

const { project } = Astro.props;

const { label, desc, stack, links } = project;

function format_website_link(url: string) {
  if (url.startsWith("http")) return url;
  let uri = Astro.site;
  if (!uri) throw new Error("Astro.site is not defined");
  uri.pathname = url;
  return uri.href;
}

function format_href(type: ProjectLinkType, href: string) {
  if (type === "repo") return `https://github.com/warsam-e/${href}`;
  return format_website_link(href);
}

function format_link_icon(type: ProjectLinkType) {
  if (type === "repo") return "logo_github";
  return "link";
}
---

<div class="project">
  <div class="content">
    <div class="meta">
      <div class="heading">
        <div class="label">{label}</div>
        <div class="stack">
          {stack.map((label) => <ProductCardStackItem {label} />)}
        </div>
      </div>
      <div class="desc">{desc}</div>
    </div>
    <div class="links">
      {
        links.map(({ type, href }) => (
          <a
            href={format_href(type, href)}
            target="_blank"
            rel="noopener noreferrer"
            class="hover_effect"
          >
            <i class="f7-icons" data-type={type}>
              {format_link_icon(type)}
            </i>
          </a>
        ))
      }
    </div>
  </div>
</div>

<style lang="scss">
  .stack {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    > .item {
      height: 1.2rem;
      font-weight: 500;
      font-size: 0.7rem;
      padding: 0 0.8rem;
      color: rgba(#007aff, 0.8);
      background: rgba(#007aff, 0.1);
      border-radius: calc(1.2rem / 4.4);
      box-shadow: inset 0 0 0 1px rgba(#007aff, 0.05);
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .project {
    color: inherit;
    text-decoration: none;

    gap: 0.8rem;
    &:not(:last-child) {
      border-bottom: 1px solid rgba(#000, 0.05);
      @media (prefers-color-scheme: dark) {
        border-color: rgba(#fff, 0.05);
      }
    }
    > .content {
      padding: 0 0 1rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 2rem;
      > .meta {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        > .heading {
          display: flex;
          flex-wrap: wrap;
          gap: 0.5rem;
          > .label {
            font-size: 1.2rem;
            font-weight: 500;
          }
        }
        > .desc {
          opacity: 0.3;
          font-size: 1rem;
          font-weight: 500;
        }
      }
      > .links {
        display: flex;
        align-items: center;
        gap: 1rem;
        > a {
          color: inherit;
          opacity: 0.8;
          > i {
            font-size: 1.3rem;
            &[data-type="repo"] {
              color: #333;
              @media (prefers-color-scheme: dark) {
                color: #ddd;
              }
            }
            &[data-type="website"] {
              color: var(--blue);
            }
          }
        }
      }
    }
  }

  @media only screen and (max-width: 820px) {
    .project {
      > .content {
        flex-direction: column;
        align-items: flex-end;
        gap: 1rem;
        > .meta {
          > .heading {
            flex-direction: column;
            align-items: flex-start;
            > .label {
              font-size: 1.4rem;
            }
          }
        }
        > .links {
          > a {
            > i {
              font-size: 1.5rem;
            }
          }
        }
      }
    }
  }
</style>
