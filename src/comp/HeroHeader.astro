---
import { social_links } from "$lib/socials";
import SocialItem from "./SocialItem.astro";
---

<header>
  <div class="meta">
    <img src="me_bg.jpg" />
    <div class="info">
      <div class="name">Warsame Egeh</div>
      <div class="title">Full Stack Developer</div>
    </div>
  </div>
  <div class="desc">
    Strong foundation in front-end technologies, expanded expertise into backend
    systems, API integrations, and mobile app development using Swift / Flutter.
  </div>
  <div class="social_links">
    {social_links.map((item) => <SocialItem {item} />)}
  </div>
</header>

<style lang="scss">
  header {
    position: sticky;
    top: 3rem;
    left: 0;
    align-self: flex-start;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    > .meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      > img {
        height: 5rem;
        aspect-ratio: 1/1;
        border-radius: 100%;
      }
      > .info {
        > .name {
          font-size: 2rem;
        }
        .title {
          font-size: 1rem;
          opacity: 0.4;
        }
      }
      @media only screen and (max-width: 1024px) {
        flex-direction: column;
      }
    }
    > .desc {
      margin-top: 0.5rem;
      max-width: 40rem;
      font-size: 0.8rem;
      opacity: 0.5;
    }
    > .social_links {
      margin-top: 1rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
  }

  @media only screen and (max-width: 1024px) {
    header {
      position: unset;
    }
  }

  @media only screen and (max-width: 820px) {
    header {
      padding: 0 1rem;
      .title {
        font-size: 1.2rem;
      }
      > .name {
        font-size: 2.5rem;
      }
    }
  }
</style>
