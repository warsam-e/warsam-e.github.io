{
	"extends": "astro/tsconfigs/strictest",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist", "node_modules", "**/node_modules/*"],
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"baseUrl": ".",
		"paths": {
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"],
			"$comp": ["./src/comp"],
			"$comp/*": ["./src/comp/*"]
		}
	}
}
