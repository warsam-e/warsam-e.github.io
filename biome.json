{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "off" } } },
	"formatter": {
		"enabled": true,
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/*.astro"],
		"lineWidth": 120,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/*.astro"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off"
			}
		}
	}
}
