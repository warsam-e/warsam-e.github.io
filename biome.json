{
	"$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"includes": ["**", "!!docs", "!!node_modules", "!!docs", "!!**/*.astro", "!!**/*.js"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"useExportType": "error"
			}
		}
	}
}
